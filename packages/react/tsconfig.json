{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
